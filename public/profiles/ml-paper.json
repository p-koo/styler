    "name": "ML Paper",
    "description": "Machine learning research: technical precision, clear methodology, reproducibility focus",
    "source": "manual",
    "overrides": {
      "verbosity": "moderate",
      "formalityLevel": 4,
      "hedgingStyle": "balanced",
      "activeVoicePreference": 0.6,
      "formatBans": ["emoji"],
      "avoidWords": [
        "obviously", "clearly", "trivially", "simply",
